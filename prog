list = [10,12,15,28]
largest=1
for i in list:
    if i>1:
        largest = i
print(f"The largest number is {largest}")
#
l=[12,4,6,2,1]
min1 = l[0]
for i in range(len(l)):
   if l[i] < min1:
       min1 = l[i]
print(f"The smallest number is {min1}")
#
list= ['abc', 'xyz', 'aba', '1221']
counter=0
for i in list:
    if len(i) > 1 and i[0] == i[-1]:
       counter+=1
print(f"The counter is {counter}")
# tuples
list=[(2, 5), (1, 2), (4, 4), (2, 3), (2, 1)]
length= len(list)
for i in range(0,length):
     for j in range(0,length-i-1):
        if(list[j][-1] > list[j + 1][-1]):
            counter = list[j]
            list[j] = list[j + 1]
            list[j + 1] = counter
print(list)
#remove duplicate
list= [10,20,20,30,30,40,40,50,50]
result =[]
for i in list:
    if i not in result:
        result.append(i)
print(result)
#to check list is empty
list=[]
if not list:
    print("list is empty")
else:
    print("list is filled")
