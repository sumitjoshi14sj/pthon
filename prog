length= int(input("length of rectangle:" ))
breadth= int(input("breadth of rectangle:"))
area = length*breadth
perimeter = 2*(length + breadth)
print(f"The rectangle of length {length} and breadth75 {breadth} has area of {area} and perimeter of {perimeter}. ")
############################
side1= int(input("side 1 of trinagle:"))
side2 = int(input("side 2 of traingle:"))
side3 = int(input("side 3 of trinagle:"))
if ((side1 > 0 and side2 > 0 and side3 > 0) and(side1 == (side2 + side3) or side2 == (side1 + side3) or  side3== (side1 + side2))):
    print("The trinagle is  Right angle trinagle")
if side1 == side2 == side3:
    print("The triangle is Equilateral triangle")
elif side1==side2 or side2== side3 or side1 == side3:
    print("The trinagle is Isoceles trinagle")
else:
    print("The trinagle is scalene trinagle")
